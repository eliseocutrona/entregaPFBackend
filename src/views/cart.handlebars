<h1>Mi Carrito</h1>
<div class="container">
    {{#if data.products.length}}
    <table>
        <thead>
            <tr>
                <th>Producto</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Subtotal</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each data.products}}
            <tr>
                <td>{{this.product.title}}</td>
                <td>${{this.product.price}}</td>
                <td>{{this.quantity}}</td>
                <td>${{this.subtotal}}</td>
                <td>
                    <form action="/carts/{{../data._id}}/products/{{this.product._id}}" method="post" style="display: inline;">
                        <input type="hidden" name="action" value="remove" />
                        <button type="submit">Eliminar</button>
                    </form>
                    <form action="/carts/{{../data._id}}/products/{{this.product._id}}" method="post" style="display: inline;">
                        <input type="number" name="quantity" min="1" value="{{this.quantity}}" />
                        <input type="hidden" name="action" value="update" />
                        <button type="submit">Actualizar Cantidad</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <form action="/carts/{{data._id}}/purchase" method="post">
        <button type="submit">Finalizar Compra</button>
    </form>
    {{else}}
    <p>El carrito está vacío.</p>
    {{/if}}
</div>
